{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "types": ["node", "jest"],
    "paths": {
      "@pcp/auth-middleware": ["packages/auth-middleware/index.ts"],
      "@pcp/object-id": ["packages/object-id/index.ts"],
      "@pcp/object-type": ["packages/object-id/lib/object-type"],
      "@pcp/repository": ["packages/repository/index.ts"],
      "@pcp/types": ["packages/types/index"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
